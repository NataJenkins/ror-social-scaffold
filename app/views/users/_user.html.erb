<li style="display:flex;">
  Name: <%= user.name %>
  <span class="profile-link">
    <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
  </span>

    <% lists = Array.new%>
    <% friends_user = current_user.friends %>
    <% friends_user.each do |meme| %>
      <% lists.push(meme.id) %>
    <% end %>

  <% if user.id != current_user.id && lists.exclude?(user.id) %>
    <%= form_with model: @friendship, url: user_friendships_path(current_user) do |f| %>
    <div class="field">
      <%= f.label :friend_id %><br />
      <%= f.hidden_field :friend_id, :value => user.id %>
      <%= f.submit 'friends!' %>
    </div>
    <% end %>
  <% end %>

</li>
