<%= form_for(@post) do |form| %>
  <%= form.label :content %>
  <%= form.text_field :content, id: :post_content, class: 'form-control', placeholder: 'Add New Post' %>
  <%= display_errors(@post) %>
  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>

<article class="timeline">
  <h3>
    Recent posts
  </h3>
  <ul class="posts">
    <% lists = Array.new%>
    <% friends_user = current_user.friends %>
    <% friends_user.each do |meme| %>
      <% lists.push(meme.id) %>
    <% end %>
    <% @timeline_posts.each do |lol| %>
      <%= if_friend(lol, lists) %>
    <% end %>
    <%=render @timeline_posts%>   
  </ul>
</article>
